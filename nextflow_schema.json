{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/Bovreproseq/master/nextflow_schema.json",
    "title": "Bovreproseq pipeline parameters",
    "description": "Pipeline for generating results from targeted amplicon sequencing for Bovine reproductive pathogens",
    "type": "object",
    "definitions": {
        "input_output_options": {
            "title": "Input/output options",
            "type": "object",
            "fa_icon": "fas fa-terminal",
            "description": "Define where the pipeline should find input data and save output data.",
            "required": [
                "input",
                "kraken_db"
            ],
            "properties": {
                "input": {
                    "type": "string",
                    "format": "directory-path",
                    "exists": true,
                    "description": "Path to directory with fastq directories",
                    "help_text": "Use this parameter to specify the location of fastq directories.",
                    "fa_icon": "fas fa-folder-open"
                },
                "kraken_db": {
                    "type": "string",
                    "description": "Path to kraken2 database with bacteria,virus and protozoa",
                    "fa_icon": "fas fa-database",
                    "format": "directory-path"
                },
                "out_dir": {
                    "type": "string",
                    "format": "directory-path",
                    "description": "Output directory"
                }
            }
        },
        "Optional": {
            "title": "Optional",
            "type": "object",
            "description": "Optional parameters",
            "default": "",
            "properties": {
                "trim_barcodes": {
                    "type": "string",
                    "enum": [
                        "Yes"
                    ],
                    "description": "Select Yes to trim barcodes and adapter sequences otherwise leave this option unchanged."
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/input_output_options"
        },
        {
            "$ref": "#/definitions/Optional"
        }
    ]
}