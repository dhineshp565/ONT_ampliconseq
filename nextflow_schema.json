{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/ONT_ampliconseq/master/nextflow_schema.json",
    "title": "ONT_ampliconseq pipeline parameters",
    "description": "Pipeline for generating consensus from ONT targeted amplicon sequencing",
    "type": "object",
    "definitions": {
        "input_output_options": {
            "title": "Input/output options",
            "type": "object",
            "fa_icon": "fas fa-terminal",
            "description": "Define where the pipeline should find input data and save output data.",
            "required": [
                "input",
                "kraken_db"
            ],
            "properties": {
                "input": {
                    "type": "string",
                    "format": "directory-path",
                    "exists": true,
                    "mimetype": "text/csv",
                    "description": "Path to directory with fastq directories",
                    "help_text": "You will need to create a design file with information about the samples in your experiment before running the pipeline. Use this parameter to specify its location. It has to be a comma-separated file with 3 columns, and a header row.",
                    "fa_icon": "fas fa-folder-open"
                },
                "kraken_db": {
                    "type": "string",
                    "default": "None",
                    "description": "Path to kraken2 database",
                    "format": "directory-path",
                    "fa_icon": "fas fa-database"
                },
                "out_dir": {
                    "type": "string",
                    "default": "None",
                    "description": "Path to output files",
                    "fa_icon": "fas fa-folder-open"
                }
            }
        },
        "optional": {
            "title": "Optional",
            "type": "object",
            "description": "",
            "default": "",
            "properties": {
                "trim_barcodes": {
                    "type": "string",
                    "default": "None",
                    "description": "Select Yes to trim barcodes and adapters",
                    "enum": [
                        "No",
                        "Yes"
                    ]
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/input_output_options"
        },
        {
            "$ref": "#/definitions/optional"
        }
    ]
}